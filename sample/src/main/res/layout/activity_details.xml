<com.vlonjatg.progressactivity.ProgressConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:progressActivity="http://schemas.android.com/apk/res-auto"
	android:id="@+id/progress"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	progressActivity:emptyBackgroundColor="#fbc02d"
	progressActivity:emptyContentTextColor="#FFFFFF"
	progressActivity:emptyOrErrorTopOffset="100dp"
	progressActivity:emptyTitleTextColor="#FFFFFF"
	progressActivity:errorBackgroundColor="#42a5f5"
	progressActivity:errorButtonBackgroundColor="#9C27B0"
	progressActivity:errorButtonTextColor="#FFFFFF"
	progressActivity:errorContentTextColor="#FFFFFF"
	progressActivity:errorTitleTextColor="#FFFFFF"
	progressActivity:loadingBackgroundColor="#FFFFFF"
	progressActivity:loadingProgressBarColor="#9C27B0">

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:text="Hi"
		progressActivity:layout_constraintBottom_toBottomOf="parent"
		progressActivity:layout_constraintEnd_toEndOf="parent"
		progressActivity:layout_constraintStart_toStartOf="parent" />

	<TextView
		android:id="@+id/text_hello"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="56dp"
		android:gravity="center"
		android:text="@string/hello_world"
		progressActivity:layout_constraintBottom_toBottomOf="parent"
		progressActivity:layout_constraintEnd_toEndOf="parent"
		progressActivity:layout_constraintStart_toStartOf="parent"
		progressActivity:layout_constraintTop_toTopOf="parent" />

	<android.support.v7.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_width="fill_parent"
		android:layout_height="56dp"
		android:elevation="2dp"
		android:theme="@style/Toolbar"
		progressActivity:layout_constraintEnd_toEndOf="parent"
		progressActivity:layout_constraintStart_toStartOf="parent"
		progressActivity:layout_constraintTop_toTopOf="parent" />

</com.vlonjatg.progressactivity.ProgressConstraintLayout>

